<?xml version="1.0"?>
<rss version="2.0" xmlns:atom="http://www.w3.org/2005/Atom">
  <channel>
    <title>{{site.title | xml_escape}}: Blog</title>
    <description>Tommy Carlier’s blog</description>
    <link>{{site.url}}</link>
    <language>en-US</language>
    <copyright>© 2004–{{site.time | date:'%Y'}} Tommy Carlier</copyright>
    <atom:link href="{{site.url}}/feed.xml" rel="self" type="application/rss+xml" />
    {% for post in site.posts limit:30 %}
    <item>
      <title>{{post.title | xml_escape}}</title>
      <description>{{post.content | xml_escape}}&lt;img src=&quot;//c.statcounter.com/{{site.statcounter_project}}/0/{{site.statcounter_security}}/1/&quot; alt=&quot;&quot;&gt;</description>
      <pubDate>{{post.date | date:"%a, %d %b %Y %H:%M:%S %z"}}</pubDate>
      <link>{{site.url}}{{post.url}}</link>
      <guid isPermaLink="true">{{site.url}}{{post.url}}</guid>
    </item>
    {% endfor %}
  </channel>
</rss>
